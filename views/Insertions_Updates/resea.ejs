<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title> <%= pageTitle %> </title>
    <%/*We include the CSS*/ %> 
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <%- include("../includes/navbar.ejs")%> <%/*We include navbar*/ %>
    <% if (locals.insert) { /*if insert=true from getInsert*/ %>
    <div class="container">
        <div class="row" id="row">
            <div class="col-md-12">
                <form class="form-horizontal" name="programs-criteria" action="/tables/create/researcher" method="POST">
                    <div class="form-group col-sm-3 mb-3">
                        <label for="re_name">Researcher Name</label>
                        <input type="text" id="re_name" name="re_name" placeholder="Enter Researcher's name" required>
                    </div>
                    <div class="form-group col-sm-3 mb-3">
                        <label for="re_sname">Researcher Name</label>
                        <input type="text" id="re_sname" name="re_sname" placeholder="Enter Researcher's surname" required>
                    </div>
                    <div class="form-group col-sm-3 mb-3">
                        <p>Sex:</p>
                        <input type="radio" id="1" name="sex" value="1">
                        <label for="1">Male</label>
                        <input type="radio" id="2" name="sex" value="2">
                        <label for="2">Female</label>
                    </div>
                    <div class="form-group col-sm-3 mb-3">
                        <label for="name">Birth Date</label>
                        <input type="date" class="form-control" value="1980-06-09" name="Bdate">
                    </div>
                    <div class="form-group col-sm-3 mb-3">
                        <label for="name">Work Starting Date</label>
                        <input type="date" class="form-control" value="2022-06-09" name="WSdate">
                    </div>
                    <div class="form-group col-sm-3 mb-3">
                        <label for="org">Organization's ID</label>
                        <input type="number" min="1" step="1" max="9999" id="org" name="org" placeholder="Enter ID" required>
                    </div>
            
                    <button type="submit" class="btn btn-primary btn-submit-custom">Add</button>
                </form>
            </div>
        </div>
        
    </div>
    <%}%>
    <%if (locals.update){%>
        <div class="container">
            <div class="row" id="row">
                <div class="col-md-12">
                    <form class="form-horizontal" name="programs-criteria" action="/update/perform_update" method="POST">
                        <div class="form-group col-sm-3 mb-3">
                            
                            <input type="hidden" name="table" value="researcher">
                            <input type="hidden" name="object" value="<%= JSON.stringify(old_tuple) %>"> <%/* we need old tuple for executive_id*/%>
                            
                            <%/* new tuple*/%>
                            <label for="re_name">Researcher Name</label>
                            <input type="text" id="re_name" name="re_name" placeholder="Enter Researcher's name" value="<%=old_tuple.researcher_name%>" required>
                        </div>
                        <div class="form-group col-sm-3 mb-3">
                            <label for="re_sname">Researcher Name</label>
                            <input type="text" id="re_sname" name="re_sname" placeholder="Enter Researcher's surname" value="<%=old_tuple.researcher_surname%>" required>
                        </div>
                        <div class="form-group col-sm-3 mb-3">
                            <p>Sex:</p>
                            <input type="radio" id="1" name="sex" value="1">
                            <label for="1">Male</label>
                            <input type="radio" id="2" name="sex" value="2">
                            <label for="2">Female</label>
                        </div>
                        <div class="form-group col-sm-3 mb-3">
                            <label for="name">Birth Date</label>
                            <input type="date" class="form-control" value="1980-06-09" name="Bdate" value="<%=old_tuple.birth_date%>" required>
                        </div>
                        <div class="form-group col-sm-3 mb-3">
                            <label for="name">Work Starting Date</label>
                            <input type="date" class="form-control" value="2022-06-09" name="WSdate" value="<%=old_tuple.work_starting_date%>" required>
                        </div>
                
                        <button type="submit" class="btn btn-primary btn-submit-custom">Update</button>
                    </form>
                </div>
            </div>
            
        </div>
    <%}%>
    
   
<script src="assets/bootstrap/js/bootstrap.min.js"></script>


</body>
</html>